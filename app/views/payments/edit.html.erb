<%= turbo_frame_tag(@payment) do %>
  <%= form_with(model: @payment, html: { class: "col-span-7 grid grid-cols-7" }) do |f| %>
    <div class="flex items-center justify-center row-span-1">
      <%= f.object.user.name %>
    </div>
    <div class="flex items-center justify-center row-span-1 text-center">
      $<%= f.object.amount %>
    </div>
    <div class="flex items-center justify-center row-span-1 text-center">
      <%= f.check_box :paid_in %>
    </div>
    <div class="flex items-center justify-center row-span-1 text-center">
      &nbsp;
    </div>
    <div class="flex items-center justify-center row-span-1 text-center">
      <%= f.check_box :paid_out %>
    </div>
    <%= f.submit "Update", class: "rounded-md bg-blue-500 text-white px-4 py-1 col-span-2 sm:col-span-1 my-1" %>
    <%= link_to "Cancel", game_path(@payment.game.share_code), class: "text-blue-500 flex items-center justify-center col-span-2 sm:col-span-1 my-1" %>
  <% end %>
<% end %>
