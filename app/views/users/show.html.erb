<%= button_to 'Sign Out', destroy_user_session_path, method: :delete, class: "rounded-md bg-red-500 text-white px-4 py-2" %>

<h2>Games</h2>
<% @user.games.each do |game| %>
  <%= link_to game.share_code, game_path(game) %>
<% end %>

<h2>Squares Games</h2>

<% @user.squares_games.each do |game| %>
  <%= link_to game.share_code, game_path(game) %>
<% end %>

<%= button_to "New Game", games_path, method: :post, data: { controller: "confirm", action: "click->confirm#confirm", confirm_message_param: "Create a new game?" }, class: "rounded-md bg-blue-500 text-white px-4 py-2" %>
