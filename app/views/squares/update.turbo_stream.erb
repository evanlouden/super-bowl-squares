<%= turbo_stream.replace(@square) do %>
  <%= turbo_frame_tag(@square) do %>
    <%= render(SquareComponent.new(@square)) %>
  <% end %>
<% end %>

<% if @new_payment %>
  <%= turbo_stream.append(:game_payments) do %>
    <%= turbo_frame_tag(@payment) do %>
      <%= render(@payment) %>
    <% end %>
  <% end %>
<% else %>
  <%= turbo_stream.update(@payment) do %>
    <%= render(@payment) %>
  <% end %>
<% end %>
